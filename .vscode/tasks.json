{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Raylib Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "*.cpp",                     // compile all .cpp files
                "-I", "raylib/include",      // include path for raylib
                "-L", "raylib/lib",          // library path for raylib
                "-lraylib",                  // link raylib
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o", "mygame.exe"           // output executable
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
